<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.banco.controllers.DashboardController"
            stylesheets="@../styles/style.css">
    
    <!-- Menu Lateral Esquerdo -->
    <left>
        <VBox fx:id="sidebar" spacing="0" style="-fx-background-color: #2c3e50;" prefWidth="250">
            <!-- Logo -->
            <VBox style="-fx-background-color: #34495e; -fx-padding: 25 20;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Text fill="#3498db" text="🏦" style="-fx-font-size: 24;"/>
                    <VBox>
                        <Label text="BancoPOO" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
                        <Label text="Sistema Bancário" style="-fx-text-fill: #bdc3c7; -fx-font-size: 12;"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <!-- Menu de Navegação -->
            <VBox spacing="0" style="-fx-padding: 20 0;">
                <!-- Dashboard -->
                <HBox fx:id="btnDashboard" onMouseClicked="#handleDashboard" 
                      style="-fx-background-color: #3498db; -fx-cursor: hand; -fx-padding: 15 25;">
                    <Text fill="white" text="📊" style="-fx-font-size: 16;"/>
                    <Label text="Dashboard" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 0 0 0 15;"/>
                </HBox>
                
                <!-- Gestão de Clientes -->
                <HBox fx:id="btnClientes" onMouseClicked="#handleClientes" 
                      style="-fx-cursor: hand; -fx-padding: 15 25;">
                    <Text fill="#ecf0f1" text="👥" style="-fx-font-size: 16;"/>
                    <Label text="Gestão de Clientes" style="-fx-text-fill: #ecf0f1; -fx-padding: 0 0 0 15;"/>
                </HBox>
                
                <!-- Transações -->
            <HBox fx:id="btnTransacoes" onMouseClicked="#handleTransacoes" 
                      style="-fx-cursor: hand; -fx-padding: 15 25;">
                    <Text fill="#ecf0f1" text="💸" style="-fx-font-size: 16;"/>
                    <Label text="Transações" style="-fx-text-fill: #ecf0f1; -fx-padding: 0 0 0 15;"/>
                </HBox>
                
                <!-- Relatórios -->
                <HBox fx:id="btnRelatorios" onMouseClicked="#handleRelatorios" 
                      style="-fx-cursor: hand; -fx-padding: 15 25;">
                    <Text fill="#ecf0f1" text="📈" style="-fx-font-size: 16;"/>
                    <Label text="Relatórios" style="-fx-text-fill: #ecf0f1; -fx-padding: 0 0 0 15;"/>
                </HBox>
                
                <!-- Configurações -->
                <HBox fx:id="btnConfig" onMouseClicked="#handleConfig" 
                      style="-fx-cursor: hand; -fx-padding: 15 25;">
                    <Text fill="#ecf0f1" text="⚙️" style="-fx-font-size: 16;"/>
                    <Label text="Configurações" style="-fx-text-fill: #ecf0f1; -fx-padding: 0 0 0 15;"/>
                </HBox>
            </VBox>
            
            <!-- Espaço vazio para preencher -->
            <Region VBox.vgrow="ALWAYS"/>
            
            <!-- Rodapé do Menu -->
            <VBox style="-fx-background-color: #34495e; -fx-padding: 20;" spacing="10">
                <Label text="Sistema Bancário v2.0" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12; -fx-alignment: CENTER;"/>
                <Label text="© 2024 BancoPOO" style="-fx-text-fill: #7f8c8d; -fx-font-size: 10; -fx-alignment: CENTER;"/>
            </VBox>
        </VBox>
    </left>
    
    <!-- Conteúdo Principal -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #f8f9fa;">
            <!-- Cabeçalho -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <VBox>
                    <Label text="Dashboard - Sistema Bancário" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Label text="Visão geral do sistema e métricas importantes" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                </VBox>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- Informações do Usuário -->
                <HBox alignment="CENTER_RIGHT" spacing="15">
                    <VBox alignment="CENTER_RIGHT">
                        <Label fx:id="lblUsuario" text="Administrador" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Label text="admin@banco.com" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                    </VBox>
                    <Circle radius="25" fill="#3498db">
                        <effect>
                            <Glow/>
                        </effect>
                    </Circle>
                    <Button text="Sair" onAction="#handleLogout" 
                           style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16;"/>
                </HBox>
            </HBox>
            
            <!-- Cards de Métricas -->
            <GridPane hgap="20" vgap="20">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                    <ColumnConstraints percentWidth="25"/>
                </columnConstraints>
                
                <!-- Total Clientes -->
                <VBox GridPane.columnIndex="0" 
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <VBox>
                            <Label text="47" style="-fx-text-fill: #2c3e50; -fx-font-size: 32; -fx-font-weight: bold;"/>
                            <Label text="Total Clientes" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <StackPane style="-fx-background-color: #3498db20; -fx-background-radius: 10; -fx-padding: 12;">
                            <Text fill="#3498db" text="👥" style="-fx-font-size: 20;"/>
                        </StackPane>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                        <Label text="+5% este mês" style="-fx-text-fill: #27ae60; -fx-font-size: 12; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
                
                <!-- Contas Ativas -->
                <VBox GridPane.columnIndex="1" 
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <VBox>
                            <Label text="62" style="-fx-text-fill: #2c3e50; -fx-font-size: 32; -fx-font-weight: bold;"/>
                            <Label text="Contas Ativas" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <StackPane style="-fx-background-color: #27ae6020; -fx-background-radius: 10; -fx-padding: 12;">
                            <Text fill="#27ae60" text="💳" style="-fx-font-size: 20;"/>
                        </StackPane>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                        <Label text="+12% este mês" style="-fx-text-fill: #27ae60; -fx-font-size: 12; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
                
                <!-- Transações Hoje -->
                <VBox GridPane.columnIndex="2" 
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <VBox>
                            <Label text="28" style="-fx-text-fill: #2c3e50; -fx-font-size: 32; -fx-font-weight: bold;"/>
                            <Label text="Transações Hoje" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <StackPane style="-fx-background-color: #e67e2220; -fx-background-radius: 10; -fx-padding: 12;">
                            <Text fill="#e67e22" text="🔄" style="-fx-font-size: 20;"/>
                        </StackPane>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                        <Label text="+8% em relação a ontem" style="-fx-text-fill: #27ae60; -fx-font-size: 12; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
                
                <!-- Saldo Total -->
                <VBox GridPane.columnIndex="3" 
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <VBox>
                            <Label text="1.250.000,00" style="-fx-text-fill: #2c3e50; -fx-font-size: 24; -fx-font-weight: bold;"/>
                            <Label text="Saldo Total (MT)" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <StackPane style="-fx-background-color: #9b59b620; -fx-background-radius: 10; -fx-padding: 12;">
                            <Text fill="#9b59b6" text="💰" style="-fx-font-size: 20;"/>
                        </StackPane>
                    </HBox>
                    <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                        <Label text="+3.2% este mês" style="-fx-text-fill: #27ae60; -fx-font-size: 12; -fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
            </GridPane>
            
            <!-- Ações Rápidas e Estatísticas -->
            <HBox spacing="20">
                <!-- Ações Rápidas -->
                <VBox spacing="15" prefWidth="400">
                    <Label text="Ações Rápidas" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>
                        
                        <!-- Novo Cliente -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" 
                              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;"
                              onMouseClicked="#handleNovoCliente">
                            <VBox alignment="CENTER" spacing="10">
                                <Text fill="#3498db" text="➕" style="-fx-font-size: 24;"/>
                                <Label text="Novo Cliente" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                            </VBox>
                        </VBox>
                        
                        <!-- Abrir Conta -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" 
                              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;"
                              onMouseClicked="#handleNovaConta">
                            <VBox alignment="CENTER" spacing="10">
                                <Text fill="#27ae60" text="🏦" style="-fx-font-size: 24;"/>
                                <Label text="Abrir Conta" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                            </VBox>
                        </VBox>
                        
                        <!-- Efetuar Depósito -->
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" 
                              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;"
                              onMouseClicked="#handleDeposito">
                            <VBox alignment="CENTER" spacing="10">
                                <Text fill="#e67e22" text="💰" style="-fx-font-size: 24;"/>
                                <Label text="Efetuar Depósito" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                            </VBox>
                        </VBox>
                        
                        <!-- Gerar Relatório -->
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" 
                              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;"
                              onMouseClicked="#handleRelatorio">
                            <VBox alignment="CENTER" spacing="10">
                                <Text fill="#9b59b6" text="📊" style="-fx-font-size: 24;"/>
                                <Label text="Gerar Relatório" style="-fx-text-fill: #2c3e50; -fx-font-weight: bold;"/>
                            </VBox>
                        </VBox>
                    </GridPane>
                </VBox>
                
                <!-- Estatísticas do Sistema -->
                <VBox spacing="15" prefWidth="400">
                    <Label text="Estatísticas do Sistema" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    
                    <VBox spacing="10">
                        <!-- Clientes Ativos -->
                        <HBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"
                              alignment="CENTER_LEFT" spacing="15">
                            <StackPane style="-fx-background-color: #27ae6020; -fx-background-radius: 8; -fx-padding: 8;">
                                <Text fill="#27ae60" text="📈" style="-fx-font-size: 16;"/>
                            </StackPane>
                            <VBox>
                                <Label text="Clientes Ativos" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label text="45 clientes" style="-fx-text-fill: #7f8c8d;"/>
                            </VBox>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="95%" style="-fx-text-fill: #27ae60; -fx-font-weight: bold;"/>
                        </HBox>
                        
                        <!-- Clientes Inativos -->
                        <HBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"
                              alignment="CENTER_LEFT" spacing="15">
                            <StackPane style="-fx-background-color: #e74c3c20; -fx-background-radius: 8; -fx-padding: 8;">
                                <Text fill="#e74c3c" text="📉" style="-fx-font-size: 16;"/>
                            </StackPane>
                            <VBox>
                                <Label text="Clientes Inativos" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label text="2 clientes" style="-fx-text-fill: #7f8c8d;"/>
                            </VBox>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="5%" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold;"/>
                        </HBox>
                        
                        <!-- Última Atualização -->
                        <HBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"
                              alignment="CENTER_LEFT" spacing="15">
                            <StackPane style="-fx-background-color: #3498db20; -fx-background-radius: 8; -fx-padding: 8;">
                                <Text fill="#3498db" text="⏰" style="-fx-font-size: 16;"/>
                            </StackPane>
                            <VBox>
                                <Label text="Última Atualização" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label text="Hoje, 14:30" style="-fx-text-fill: #7f8c8d;"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>